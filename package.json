{
  "name": "patentsbackend",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r ./tsconfig-paths-bootstrap.js .",
    "start:dev": "node -r dotenv/config -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "test:unit": "mocha --recursive -r tsconfig-paths/register -r ts-node/register -r source-map-support/register src/**/*.spec.ts",
    "test:lint": "eslint --ext .ts ./src",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test": "npm run test:lint && npm run test:unit"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/joi": "^14.3.4",
    "@types/mocha": "^5.2.7",
    "@types/normalizr": "^2.0.18",
    "@types/sinon": "^7.5.0",
    "@types/supertest": "^2.0.8",
    "@types/xlsx": "0.0.36",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "normalizr": "^3.4.1",
    "prettier": "^1.19.1",
    "sheetjs": "^2.0.0",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2",
    "xlsx": "^0.17.0"
  }
}
